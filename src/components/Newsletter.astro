<style>
  form {
    display: flex;
    align-items: end;
  }

  label {
    display: flex;
    flex-direction: column;
    flex: 1;
    font-weight: bold;
  }

  label input {
    width: 100%;
    padding: 1em;
    border: none;
  }

  input[type="submit"] {
    background-color: var(--color-text);
    border: none;
    cursor: pointer;
    color: var(--color-bg);
    padding: 1em;
